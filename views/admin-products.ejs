<%- include('./partials/header') %> <%- include('./partials/flash.ejs') %>
<div class="w-full h-screen flex items-start px-20 py-20">
  <div class="w-[25%] flex h-screen flex-col items-start">
    <div class="flex flex-col">
      <a class="block w-fit mb-2" href="/owners/products">All Products</a>
      <a class="block w-fit mb-2" href="/owners/products/create"
        >Create new product</a
      >
    </div>
  </div>
  <div class="w-[75%] flex flex-col gap-5 h-screen">
    <a class="text-red-500" href="/owners/products/deleteAll">Delete all</a>
    <div class="flex items-start gap-5">
      <% products.forEach(function(product) { %>
      <div class="w-60">
        <div
          class="w-full h-52 flex items-center justify-center bg-[<%= product.bgcolor %>]"
        >
          <img
            class="h-[12rem] h-full object-cover"
            src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
            alt=""
          />
        </div>
        <div
          class="flex justify-between bg-black items-center px-4 py-4 text-white"
        >
        <div>
          <h3><%= product.name %></h3>
          <h4>â‚¹ <%= product.price %></h4>
        </div>
          <div class="flex gap-2 text-black">
            <a
              class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
              href="/owners/products/edit/<%= product._id %>"
            >
              <i class="ri-edit-line"></i>
            </a>
            <form
              action="/owners/products/delete/<%= product._id %>"
              method="post"
            >
              <button
                type="submit"
                class="w-7 h-7 flex items-center justify-center rounded-full bg-white"
              >
                <i class="ri-delete-bin-line"></i>
              </button>
            </form>
          </div>
        </div>
      </div>

      <% }) %>
    </div>
  </div>
</div>
<%- include('./partials/footer') %>
